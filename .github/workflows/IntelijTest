name: Build and Test

on:
  push:
    branches:
      - main

jobs:
  build:
    runs-on: windows-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v3

      - name: Set up JDK
        uses: actions/setup-java@v3
        with:
          java-version: '9'

      - name: Set up Maven
        uses: actions/setup-java@v3
        with:
          java-version: '9'
          maven-version: '3.x'

      - name: Build project
        run: mvn clean install

      - name: Run tests
        run: mvn test
